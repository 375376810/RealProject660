<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.mobilesafe660"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HomeActivity" />
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".activity.LostAndFindActivity"
            android:label="@string/title_activity_lost_and_find" >
        </activity>
        <activity
            android:name="com.project.mobilesafe660.activity.Setup1Activity"
            android:label="@string/title_activity_setup1" >
        </activity>
        <activity
            android:name="com.project.mobilesafe660.activity.Setup2Activity"
            android:label="@string/title_activity_setup2" >
        </activity>
        <activity
            android:name="com.project.mobilesafe660.activity.Setup3Activity"
            android:label="@string/title_activity_setup3" >
        </activity>
        <activity
            android:name="com.project.mobilesafe660.activity.Setup4Activity"
            android:label="@string/title_activity_setup4" >
        </activity>

        <receiver android:name="receiver.BootCompleteReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>